
@inherits LayoutComponentBase

<PModal Value=@Value
        Persistent
        Title=@Title
        Width="500"
        On
        OnSave="OnOK"
        OnCancel="OnCancel">
    <ActivatorContent>
        <MButton @attributes="@context.Attrs">Activator</MButton>
    </ActivatorContent>
    <ChildContent>
        @ChildContent
    </ChildContent>
    <CancelContent Context="cancel">
        <MButton Icon OnClick="cancel.Click" Disabled="cancel.Loading">
            <MIcon>mdi-cancel</MIcon>
        </MButton>
    </CancelContent>
    <SaveContent Context="save">
        <MButton Icon Color="primary" OnClick="save.Click" Disabled="save.Loading" Loading="save.Loading">
            <MIcon>mdi-check</MIcon>
        </MButton>
    </SaveContent>
</PModal>

@code {
    [Parameter]
    public bool Value {get;set;} = false;

    [Parameter]
    public string Title {get;set;}

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public EventCallback<ModalActionEventArgs> OnOK {get;set;}

    [Parameter]
    public EventCallback<ModalActionEventArgs> OnCancel {get;set;}

}