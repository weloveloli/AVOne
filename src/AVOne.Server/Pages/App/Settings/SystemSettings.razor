@page "/app/settings/system"
@inherits ProComponentBase

<MRow>
    <MCol Md=3 Sm=12>
        <MList>
            <MListItemGroup Mandatory @bind-Value="_current" ActiveClass="deep-purple white--text elevation-6">
                <MListItem>
                    <MListItemIcon>
                        <MIcon>fa:fas fa-sync</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                        <MListItemTitle>@(T("Settings.System.Scaning.Title"))</MListItemTitle>
                    </MListItemContent>
                </MListItem>
                <MListItem>
                    <MListItemIcon>
                            <MIcon>fa:fas fa-wrench</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                            <MListItemTitle>@(T("Settings.System.Paths.Title"))</MListItemTitle>
                    </MListItemContent>
                </MListItem>
                <MListItem>
                    <MListItemIcon>
                            <MIcon>fa:fas fa-wifi</MIcon>
                    </MListItemIcon>
                    <MListItemContent>
                            <MListItemTitle>@(T("Settings.System.Proxy.Title"))</MListItemTitle>
                    </MListItemContent>
                </MListItem>
                    <MListItem>
                        <MListItemIcon>
                            <MIcon>fa:fas fa-download</MIcon>
                        </MListItemIcon>
                        <MListItemContent>
                            <MListItemTitle>@(T("Settings.System.Download.Title"))</MListItemTitle>
                        </MListItemContent>
                    </MListItem>
            </MListItemGroup>
        </MList>
    </MCol>
    <MCol Md=9 Sm=12>
        @if (_current == 0)
        {
            <MCard>
                <MCardTitle>
                    <MList Style="width:100%">
                        <MRow Class="mt-2">
                            <MCol Md=12 Sm=12>
                                <MTextarea @bind-Value="ConfigurationManager.CommonConfiguration.MovieID.ignore_regex"
                                Rows="2" Label="@(T("Settings.System.Scaning.IgnoreRegex"))"
                                Placeholder="@(T("Settings.System.Scaning.IgnoreRegex"))" Outlined
                                                                TValue="string" />
                                </MCol>
                                <MCol Md=12 Sm=12>
                                <MTextarea @bind-Value="ConfigurationManager.CommonConfiguration.MovieID.ignore_whole_word"
                                Rows="2" Label="@(T("Settings.System.Scaning.IgnoreWholeWord"))"
                                Placeholder="@(T("Settings.System.Scaning.IgnoreWholeWord"))" Outlined
                                                                TValue="string" />
                                </MCol>
                                <MCol Md=12 Sm=12>
                                <MTextField @bind-Value="ConfigurationManager.CommonConfiguration.File.media_ext"
                                Label="@(T("Settings.System.Scaning.MediaExt"))"
                                Placeholder="@(T("Settings.System.Scaning.MediaExt"))" Outlined TValue="string" />
                                </MCol>
                                <MCol Md=12 Sm=12>
                                <MTextField @bind-Value="ConfigurationManager.CommonConfiguration.File.ignore_folder"
                                Label="@(T("Settings.System.Scaning.IgnoreFolder"))"
                                Placeholder="@(T("Settings.System.Scaning.IgnoreFolder"))" Outlined
                                TValue="string" />
                                </MCol>
                                </MRow>
                                <MItem>
                                <MButton OnClick="SaveConfig" Color="deep-purple white--text font-weight-black">
                                @(T("Common.SaveChanges")) </MButton>
                            <MButton Outlined Class="ml-2 grey--text font-weight-black" OnClick="ResetConfig">
                            @(T("Common.Reset")) </MButton>
                        </MItem>
                    </MList>
                </MCardTitle>
            </MCard>
        }
        @if (_current == 1)
        {
            <MCard>
                <MCardText>
                    <MRow>
                        <MCol Md=12 Sm=12>
                            <MTextField Disabled Value="@(ApplicationPaths.DataPath)" Label="@(T("Settings.System.Paths.DataPath"))" Outlined Readonly TValue="string" />
                        </MCol>
                        <MCol Md=12 Sm=12>
                            <MTextField Disabled Value="@(ApplicationPaths.PluginsPath)" Label="@(T("Settings.System.Paths.PluginsPath"))" Outlined Readonly TValue="string" />
                        </MCol>
                        <MCol Md=12 Sm=12>
                            <MTextField Disabled Value="@(ApplicationPaths.LogDirectoryPath)" Label="@(T("Settings.System.Paths.LogDirectoryPath"))" Outlined Readonly TValue="string" />
                        </MCol>
                        <MCol Md=12 Sm=12>
                            <MTextField Disabled Value="@(ApplicationPaths.CachePath)" Label="@(T("Settings.System.Paths.CachePath"))" Outlined Readonly TValue="string" />
                        </MCol>
                    </MRow>
                </MCardText>
             </MCard>
        }
        @if (_current == 2)
        {
            <MCard>
                <MCardTitle>
                    <MList Style="width:100%">
                        <MRow Class="mt-2">
                            <MCol Md=12 Sm=12>
                                <MTextarea @bind-Value="ConfigurationManager.CommonConfiguration.ProviderConfig.Proxy"
                                Rows="2" Label="@(T("Settings.System.Proxy.Default.Title"))"
                                Placeholder="@(T("Settings.System.Proxy.Default.Placeholder"))" Outlined
                                                                TValue="string" />
                                </MCol>
                                <MCol Md=12 Sm=12>
                                <MTextarea @bind-Value="ConfigurationManager.CommonConfiguration.DownloadConfig.Proxy"
                                Rows="2" Label="@(T("Settings.System.Proxy.Download.Title"))"
                                Placeholder="@(T("Settings.System.Proxy.Download.Placeholder"))" Outlined
                                                                TValue="string" />
                                </MCol>
                                </MRow>
                                <MItem>
                                <MButton OnClick="SaveConfig" Color="deep-purple white--text font-weight-black">
                                @(T("Common.SaveChanges")) </MButton>
                            <MButton Outlined Class="ml-2 grey--text font-weight-black" OnClick="ResetConfig">
                            @(T("Common.Reset")) </MButton>
                        </MItem>
                    </MList>
                </MCardTitle>
            </MCard>
        }
        @if (_current == 3)
        {
            <MCard>
                <MCardTitle>
                    <MList Style="width:100%">
                        <MRow Class="mt-2">
                            <MCol Md=12 Sm=12>
                                    <MTextField @bind-Value="ConfigurationManager.CommonConfiguration.DownloadConfig.DefaultDownloadThreadCount"
                                            Label="@(T("Settings.System.Download.ThreadCount"))" Outlined TValue="int" />
                                </MCol>
                                <MCol Md=12 Sm=12>
                                    <MTextField @bind-Value="ConfigurationManager.CommonConfiguration.DownloadConfig.DefaultRetryCount"
                                        Label="@(T("Settings.System.Download.RetryCount"))" Outlined TValue="int" />
                                </MCol>
                                <MCol Md=12 Sm=12>
                                <MTextField @bind-Value="ConfigurationManager.CommonConfiguration.DownloadConfig.DefaultDownloadDir"
                                        Label="@(T("Settings.System.Download.DownloadDir"))" Outlined TValue="string" />
                                </MCol>
                                </MRow>
                                <MItem>
                                <MButton OnClick="SaveConfig" Color="deep-purple white--text font-weight-black">
                                @(T("Common.SaveChanges"))
                            </MButton>
                            <MButton Outlined Class="ml-2 grey--text font-weight-black" OnClick="ResetConfig">
                            @(T("Common.Reset"))
                            </MButton>
                        </MItem>
                    </MList>
                </MCardTitle>
            </MCard>
        }
    </MCol>
</MRow>